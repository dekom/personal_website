%html{lang: 'en'}
  %head
    %title=params[:name].capitalize
    %meta{charset: 'utf-8'}

    -# Stylesheets
    %link{rel: "stylesheet", href: "/stylesheets/app.css"}
    %link{rel: "stylesheet", href: "/stylesheets/textile.css"}
    -#%link{rel: "stylesheet", href: "/stylesheets/#{params[:name]}.css"}
    =yield_content :css

    -# JavaScripts
    %script{type: "text/javascript", 
            src: "/javascripts/lib/jquery.js"}

  %body
    %header.row
      =haml :"_nav"
      %section.twelve.columns
        %h1 
          =params[:name].capitalize
          |
          Xing Zhou
        %h4.subheader xingz (at) andrew (dot) cmu (dot) edu
        %hr

    %section.row=yield

    %footer.row
      %section.twelve.columns
        %p<
          Updated: September 2012

    %script{type: "text/javascript", src: "/javascripts/lib/foundation.min.js"}

    %script{type: "text/javascript", src: "/javascripts/app.js"}

    %script{type: "text/javascript", src: "/javascripts/textile.js"}

    %script{type: "text/javascript", src: "/javascripts/#{params[:name]}.js"}
